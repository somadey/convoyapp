<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/miles"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorMiles"
        android:textSize="@dimen/miles_text_size"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/price"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorPrice"
        android:textSize="@dimen/price_text_size"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/miles"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/origin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorLocation"
        android:textSize="@dimen/location_text_size"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/origin_timeslot"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTime"
        android:textSize="@dimen/time_text_size"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_timeslot"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/destination"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorLocation"
        android:textSize="@dimen/location_text_size"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destination"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/destination_timeslot"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTime"
        android:textSize="@dimen/time_text_size"
        android:typeface="sans" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/destination_timeslot"
        android:layout_marginTop="15dp"
        android:background="@color/colorViewBg" />

</RelativeLayout>